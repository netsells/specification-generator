{
    "repositories": [
        {
            "type": "composer",
            "url": "https://packages.hatchly.io/repo/private/"
        }
    ],
    "require": {
        "php": ">=7.1",
        "symfony/yaml": "^4.0",
        "myclabs/php-enum": "^1.5",
        "netsells/laravel-migration-generator": "^0.4",
        "illuminate/support": "^5.5"
    },
    "require-dev": {
        "phpunit/phpunit": "^6.5"
    },
    "autoload": {
        "psr-4": {
            "Juddling\\OpenApiLaravel\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Juddling\\OpenApiLaravel\\Tests\\": "tests"
        }
    },
    "scripts": {
        "cs": "phpcs --standard=psr2 src/",
        "csfix": "phpcbf --standard=psr2 src/",
        "test": "phpunit"
    }
}
